<!DOCTYPE html>
<html>
  <head>
    <title>Super-Heroic Flix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    <header>
      <nav>
        <%= link_to image_tag("logo_movie"), root_path%>
        <ul>
          <li>
            <a href="/movie_infos">All events</a>
            <%= link_to "All movies" , root_path %>
          </li>
        </ul>
      </nav>
    </header>
    <header>
      <h1>Flix</h1>
    </header>
    <div class="content">
      <%= yield %>
    </div>
    <footer>
      <p>
        Copyright &copy; 2005-<%= Time.now.year %>
        <%= link_to 'The Pragmatic Studio','https://pragmaticstudio.com' %>
      </p>
    </footer>
  </body>
</html>