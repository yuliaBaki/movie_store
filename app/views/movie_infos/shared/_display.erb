<%= form_with(model: @movie_infos, local: true) do |form| %>
    <%= form.label :title%>
    <%= form.text_field  :title, autofocus:true%>

    <%= form.label :description%>
    <%= form.text_area  :description, row: 7%>

    <%= form.label :rating%>
    <%= form.select :rating, MovieInfo::RATINGS, prompt: "Pick one" %>

    <%= form.label :total_gross%>
    <%= form.number_field  :total_gross%>

    <%= form.label :released_on%>
    <%= form.datetime_select :released_on, {ampm:true},{class: "datetime"}%>

    <%= form.label :director %>
    <%= form.text_field :director %>

    <%= form.label :duration %>
    <%= form.text_field :duration %>

    <%= form.label :image_file_name %>
    <%= form.text_field :image_file_name %>

    <%= form.submit%>
<%end%>